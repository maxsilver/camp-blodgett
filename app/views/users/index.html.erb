<h1>Users</h1>
<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to 'Delete', user, method: :delete, data: { confirm: "Are you sure you want to delete #{user.email}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Create a New User', new_user_path, :class => "new-user blue-button button" %>
